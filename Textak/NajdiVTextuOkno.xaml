<Window x:Class="Textak.NajdiVTextuOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Textak"
        mc:Ignorable="d"
        Title="NajdiVTextuOkno" Height="150" Width="380"
        ResizeMode="NoResize"
        Closed="Window_Closed">
    <Grid>
        <Label x:Name="lblSearch" Content="Zadejte text, který chcete vyhledat" VerticalAlignment="Top" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="TBSearch" Height="30" TextWrapping="Wrap" Text="Vyhledat" Width="200" Foreground="Gray" FontSize="20" HorizontalContentAlignment="Left" Padding="5, 0, 0, 0" Margin="-80, 0, 0, 0"/>
        <Button x:Name="btnSearch" Height="30" Width="35" Click="Button_Click" Margin="170, 0, 0, 0"/>
    </Grid>
</Window>
