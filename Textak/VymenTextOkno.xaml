<Window x:Class="Textak.VymenTextOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Textak"
        mc:Ignorable="d"
        Title="VymenTextOkno" Height="260" Width="380">
    <Grid>
        <Label x:Name="lblSearch" Content="Zadejte text, který chcete vyhledat" VerticalAlignment="Top" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="TBSearch" Height="30" TextWrapping="Wrap" Text="Vyhledat" Width="200" Foreground="Gray" FontSize="20" HorizontalContentAlignment="Left" Padding="5, 0, 0, 0" Margin="-80, -100, 0, 0"/>

        <Label x:Name="lblChange" Content="Zadejte text, jakým výraz nahradíte" FontSize="20" FontWeight="Bold" Margin="0, 100, 0, 0"/>
        <TextBox x:Name="TBChange" Height="30" TextWrapping="Wrap" Text="Vyměnit" Width="200" Foreground="Gray" FontSize="20" HorizontalContentAlignment="Left" Padding="5, 0, 0, 0" Margin="-80, 100, 0, 0"/>
        <Button x:Name="btnSwap" Height="30" Width="35" Click="Button_Click" Margin="170, 100, 0, 0"/>
    </Grid>
</Window>
